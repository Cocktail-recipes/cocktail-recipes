<h1>Recipes in our DB:</h1>

<div class="container text-center">
  <div class="row">
    {{#each recipes}}
      <section class="col-12 col-md-6" >
        <h2>{{this.name}}</h2>
        <p>
          Description:
          {{this.description}}<br />
          Difficulty:
          {{this.difficulty}}
          <br />
          <a href="/recipes/{{_id}}">More details</a>
          |
          <a href="/recipes/{{_id}}/edit">Edit</a>
        </p>

      </section>
    {{/each}}
  </div>
</div>