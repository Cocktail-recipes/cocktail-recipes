<h1>Recipes in our DB:</h1>

{{#each recipes}}
    <section>
        <h2>{{this.name}}</h2>
        <p>
            Description: {{this.description}}<br />
            Difficulty: {{this.difficulty}} <br />
            <a href="/recipes/{{_id}}">More details</a> |
            <a href="/recipes/{{_id}}/edit">Edit</a>
        </p>

    </section>
{{/each}}