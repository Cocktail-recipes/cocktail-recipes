<div class="container text-left">
  <div class="row mt-3">
    <h1>Recipes in our database:</h1>
    {{#each recipes}}
      <section class="mt-3 col-xxl-3 col-xl-4 col-lg-6 col-sm-12">
        <div class="card" style="width: 18rem;">
            <h5 class="card-header"><strong>{{this.name}}</strong></h5>
          <div class="card-body">
            <div style="max-height: 240px; overflow: hidden" >
            <img src="{{this.imageUrl}}" class="img-fluid" alt="{{this.name}}">
            </div>
            <p class="card-text mt-3"><strong>Description:</strong> <span style="overflow: hidden;
      text-overflow: ellipsis;
      display: -webkit-box;
      -webkit-line-clamp: 4;
              line-clamp: 4; 
      -webkit-box-orient: vertical;
">{{this.description}}</span></p>
            <p class="card-text"><strong>Difficulty:</strong> {{this.difficulty}}</p>
            <a href="/recipes/{{_id}}" class="card-link btn btn-info">Details</a>
            <a href="/recipes/{{_id}}/edit" class="card-link btn btn-primary">Edit</a>
            <a href="/recipes/{{_id}}/delete" class="card-link btn btn-danger">Delete</a>
          </div>
        </div>
      </section>
    {{/each}}
  </div>
</div>
