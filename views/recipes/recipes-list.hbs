<div class="container text-left">
  <div class="row mt-3">
    <h1>Recipes in our database:</h1>
    {{#each recipes}}
      <section class="mt-3 col-xxl-3 col-xl-4 col-lg-6 col-sm-12">
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <img src="{{this.imageUrl}}" class="card-img-top" alt="{{this.name}}">
            <p class="card-text"><strong>Description:</strong> {{this.description}}</p>
            <p class="card-text"><strong>Difficulty:</strong> {{this.difficulty}}</p>
            <a href="/recipes/{{_id}}" class="card-link btn btn-info">Details</a>
            <a href="/recipes/{{_id}}/edit" class="card-link btn btn-primary">Edit</a>
            <a href="/recipes/{{_id}}/delete" class="card-link btn btn-danger">Delete</a>
          </div>
        </div>
      </section>
    {{/each}}
  </div>
</div>
