<section class="container mt-3" style="max-width: 1000px">

  <div class="card mb-3">
    <div class="row g-0">
      <div class="col-md-6">
        <img
          src="{{this.imageUrl}}"
          class="img-fluid rounded-start"
          alt="{{this.name}}"
        />
      </div>

      <div class="col-md-6">
        <div class="card-body">

          <h5 class="card-title"><strong>{{name}}</strong></h5>
          <p><strong>Spirits:</strong> {{spirits}} </p>
          <p><strong>Ingredients:</strong></p>
          <ul>
            {{#each otherIngredients}}
              <li>{{this}}</li>
            {{/each}}
          </ul>

          <p><strong>Description:</strong> {{description}}</p>
          <p><strong>Instructions:</strong></p>

          <ol>
            {{#each instructionSteps}}
              <li>{{this}}</li>
            {{/each}}
          </ol>

          <p><strong>Difficulty:</strong> {{difficulty}}</p>

          <a href="/recipes/{{_id}}/edit" class="btn btn-primary">Edit</a>

        </div>
      </div>
    </div>
  </div>
</section>