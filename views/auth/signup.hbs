<div class="container text-left">

  <section class="container mt-3">

    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><strong>Signup</strong></h5>

        <form action="/auth/signup" method="POST">

          <div class="mb-3">
            <label class="form-label"><strong>Email address*</strong></label>
            <input
              type="email"
              class="form-control"
              name="email"
              placeholder="rockstar@ironhack.com"
            />
          </div>

          <div class="mb-3">
            <label class="form-label"><strong>Password*</strong></label>
            <input
              type="password"
              class="form-control"
              name="password"
              placeholder="xxxxxxxx"
            />
          </div>

          <div class="card-text">Password needs to have at least 8 characters
            and must contain at least one number, one lowercase and one
            uppercase letter.</div>

          <button type="submit" class="mt-3 btn btn-primary">Create account</button>

        </form>

        {{#if errorMessage}}
          <div class="bg-danger p-2 text-white bg-opacity-75">
            {{errorMessage}}
          </div>
        {{/if}}

      </div>
    </div>

  </section>
</div>